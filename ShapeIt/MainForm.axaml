          <MenuItem Header="Print..."/>
          <MenuItem Header="Print Setup"/>
          <MenuItem Header="Select Printer"/>
          <Separator/>
          <Separator/>
          <MenuItem Header="Exit"/>
        </MenuItem>
        <MenuItem Header="_Edit">
        </MenuItem>
        <MenuItem Header="_View">
        </MenuItem>
        <MenuItem Header="_Construct">
        </MenuItem>
        <MenuItem Header="_Customize">
        </MenuItem>
      </Menu>
    </Border>
    <TextBlock
      DockPanel.Dock="Bottom"
      Text="Placeholder">
    </TextBlock>
    <ca:CadForm/>
  </DockPanel>
</Window>
